  "bugs": {
    "url": "https://github.com/zachkingcade/FinMicroServices/issues"
  },
  "homepage": "https://github.com/zachkingcade/FinMicroServices#readme",
  "devDependencies": {
    "@types/node": "^24.9.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
